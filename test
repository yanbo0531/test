import pandas as pd

# 範例數據 (您可以用 CSV 或其他檔案取代此數據)
data = {
    "Date": ["2024-12-01", "2024-12-02", "2024-12-03", "2024-12-04", "2024-12-05"],
    "Electricity_Usage_kWh": [30, 45, 50, 20, 35]
}

# 將數據轉換為 DataFrame
df = pd.DataFrame(data)

# 將日期轉換為日期格式
df["Date"] = pd.to_datetime(df["Date"])

# 計算總用電量
total_usage = df["Electricity_Usage_kWh"].sum()

# 計算平均每日用電量
average_usage = df["Electricity_Usage_kWh"].mean()

# 找出最大用電量和最小用電量
date_max_usage = df.loc[df["Electricity_Usage_kWh"].idxmax(), "Date"]
max_usage = df["Electricity_Usage_kWh"].max()

date_min_usage = df.loc[df["Electricity_Usage_kWh"].idxmin(), "Date"]
min_usage = df["Electricity_Usage_kWh"].min()

# 印出結果
print(f"總用電量: {total_usage} kWh")
print(f"平均每日用電量: {average_usage:.2f} kWh")
print(f"最大用電量: {max_usage} kWh，發生在 {date_max_usage.date()}")
print(f"最小用電量: {min_usage} kWh，發生在 {date_min_usage.date()}")
